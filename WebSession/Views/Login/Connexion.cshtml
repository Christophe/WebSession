@model WebSession.Models.Personne

@{
    bool test = (bool)@ViewData["Authentifie"];
}
@if (test)
{
    <h3> Bonjour et bienvenue @Model.Login </h3>
    @Html.ActionLink("Deconnexion", "Deconnexion")
}
else
{
    <h2>Connexion :</h2>
    using (Html.BeginForm())
    {
        <div>
            @Html.Label("Login")
            <br />
            @Html.TextBox("Login")
            <br />
            @Html.ValidationMessage("Login")
        </div>
        <div>
            @Html.Label("Password")
            <br />
            @Html.Password("Password")
            <br />
            @Html.ValidationMessage("Password")
        </div>
        <input type="submit" value="Connexion" />
        <br />
        @Html.ActionLink("Inscription", "Inscription")
    }
}
@if (Model != null && test == false)
{
    <span>Authentification error</span>
}